<%= form_tag({:action => :upload}, :multipart => true) do %>
  <%= file_field_tag 'stock_data' %>
  <%= submit_tag("Submit") %>
<% end %>

<br>
<br>

<section class="top-search">
    <div class="container">
      <%= form_tag(search_path, :method => "get") do %>
        <%= select_tag "stocks_symbol", options_for_select(Stock.all.map {|t| [ t.symbol]}.uniq), prompt: "Stock Symbol" %>
        <%= select_tag "stocks_interval", options_for_select([ "HOURLY", "DAILY"]), prompt: "Interval" %>
        <%= submit_tag "Filter", name: nil, class:"btn btn-primary" %>
      <% end %>
    </div>
</section>

<% if @stock_datas.present? %>
  <%= line_chart [{name: "Stock Price", data: @stock_datas}] %>
<% end %>
